<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerShell GUI Tool"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3"
        ResizeMode="CanResize">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="200"/>
            <!-- Activity Log -->
            <RowDefinition Height="35"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Grid Margin="30,0">
                <StackPanel VerticalAlignment="Center">
                    <Label Content="PowerShell GUI Tool" FontSize="24" FontWeight="SemiBold" Foreground="#202020" Padding="0,0,0,5"/>
                    <Label Content="Zero-Structure Edition" FontSize="12" Foreground="#808080" Padding="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Section -->
        <Grid Grid.Row="1" Margin="30,30,30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Folder Selection Section -->
            <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <Label Grid.Row="0" Content="Zielordner auswÃ¤hlen" FontSize="16" FontWeight="SemiBold" Foreground="#202020" Padding="0"/>

                    <!-- Folder Selection Controls -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <!-- Path TextBox -->
                        <Border Grid.Column="0" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Background="#FFFFFF">
                            <TextBox Name="TargetPathTextBox"
                                     BorderThickness="0"
                                     Padding="12,10"
                                     FontSize="14"
                                     FontFamily="Segoe UI"
                                     VerticalContentAlignment="Center"
                                     Foreground="#202020"
                                     Background="Transparent"
                                     Text=""/>
                        </Border>

                        <!-- Browse Button -->
                        <Button Grid.Column="2"
                                Name="BrowseFolderButton"
                                Content="ðŸ“ Durchsuchen"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="15,10"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Name="Border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#106EBE"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#005A9E"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!-- Options Section -->
            <Border Grid.Row="2" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="25">
                <StackPanel>
                    <Label Content="Optionen" FontSize="16" FontWeight="SemiBold" Foreground="#202020" Padding="0,0,0,10"/>

                    <CheckBox Name="VerboseLoggingCheckBox"
                              Content="Detaillierte Protokollierung aktivieren"
                              FontSize="14"
                              Foreground="#404040"
                              Margin="0,0,0,8"
                              Cursor="Hand"/>

                    <CheckBox Name="CreateBackupCheckBox"
                              Content="Automatisches Backup erstellen"
                              FontSize="14"
                              Foreground="#404040"
                              IsChecked="True"
                              Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- Start Button -->
            <Button Grid.Row="4"
                    Name="StartButton"
                    Content="â–¶ Starten"
                    Background="#10893E"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="0"
                    Height="50"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    HorizontalAlignment="Stretch">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Name="Border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#0F7A38"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#0D6A30"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#A0A0A0"/>
                                            <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Activity Log Section -->
        <Border Grid.Row="2" Background="#FFFFFF" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid Margin="30,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Log Header -->
                <Grid Grid.Row="0">
                    <Label Content="ðŸ“‹ AktivitÃ¤tsprotokoll" FontSize="14" FontWeight="SemiBold" Foreground="#202020" HorizontalAlignment="Left" Padding="0"/>
                    <Button Name="ClearLogButton"
                            Content="LÃ¶schen"
                            Background="Transparent"
                            Foreground="#0078D4"
                            BorderBrush="#0078D4"
                            BorderThickness="1"
                            HorizontalAlignment="Right"
                            Padding="12,4"
                            FontSize="12"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Log Content -->
                <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                    <RichTextBox Name="ActivityLog"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="#FAFAFA"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Padding="10">
                        <FlowDocument>
                            <Paragraph>
                                <Run Foreground="Gray" Text="Bereit zum Starten..."/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#0078D4">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Name="StatusLabel"
                       Content="Bereit"
                       Foreground="White"
                       FontSize="13"
                       FontWeight="Medium"
                       VerticalAlignment="Center"
                       Padding="0"/>

                <ProgressBar Name="StatusProgressBar"
                             Grid.Column="1"
                             Width="120"
                             Height="6"
                             VerticalAlignment="Center"
                             Visibility="Collapsed"
                             Background="#FFFFFF40"
                             Foreground="#FFFFFF"
                             BorderThickness="0"/>
            </Grid>
        </Border>

    </Grid>
</Window>
