<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerShell GUI Tool"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3"
        ResizeMode="CanResize">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Label Content="PowerShell GUI Tool" FontSize="20" FontWeight="SemiBold" Foreground="#202020" Margin="20,0" VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Optionale Elemente Auswahl -->
                <Border Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="Optionale Elemente auswaehlen" FontSize="14" FontWeight="SemiBold" Foreground="#202020" Padding="0,0,0,10"/>
                        <CheckBox Name="Element1CheckBox" Content="Element 1" FontSize="13" Margin="0,0,0,8" IsChecked="True"/>
                        <CheckBox Name="Element2CheckBox" Content="Element 2" FontSize="13" Margin="0,0,0,8" IsChecked="True"/>
                        <CheckBox Name="Element3CheckBox" Content="Element 3" FontSize="13" Margin="0,0,0,8" IsChecked="False"/>
                        <CheckBox Name="Element4CheckBox" Content="Element 4" FontSize="13" Margin="0,0,0,8" IsChecked="False"/>
                        <CheckBox Name="Element5CheckBox" Content="Element 5" FontSize="13" Margin="0,0,0,8" IsChecked="True"/>
                    </StackPanel>
                </Border>

                <!-- Zusaetzliche Optionen -->
                <Border Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="Zusaetzliche Optionen" FontSize="14" FontWeight="SemiBold" Foreground="#202020" Padding="0,0,0,10"/>
                        <CheckBox Name="VerboseLoggingCheckBox" Content="Detaillierte Protokollierung aktivieren" FontSize="13" Margin="0,0,0,8"/>
                        <CheckBox Name="CreateBackupCheckBox" Content="Automatisches Backup erstellen" FontSize="13" IsChecked="True"/>
                    </StackPanel>
                </Border>

                <!-- START BUTTON - EXTRA GROSS UND DEUTLICH -->
                <Button Name="StartButton"
                        Content="SAMMLUNG STARTEN"
                        Height="60"
                        Width="300"
                        Background="#10893E"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        BorderThickness="2"
                        BorderBrush="#0D6B31"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        Cursor="Hand"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Activity Log -->
        <Border Grid.Row="2" Background="#FFFFFF" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid Margin="20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Label Content="Aktivitaetsprotokoll" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Left" Padding="0"/>
                    <Button Name="ClearLogButton" Content="Loeschen" Background="Transparent" Foreground="#0078D4" BorderBrush="#0078D4" BorderThickness="1" HorizontalAlignment="Right" Padding="10,3" FontSize="11"/>
                </Grid>

                <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1">
                    <RichTextBox Name="ActivityLog" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Background="#FAFAFA" BorderThickness="0" FontFamily="Consolas" FontSize="11" Padding="8">
                        <FlowDocument>
                            <Paragraph>
                                <Run Foreground="Gray" Text="Bereit zum Starten..."/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#0078D4">
            <Grid Margin="20,0">
                <Label Name="StatusLabel" Content="Bereit" Foreground="White" FontSize="12" VerticalAlignment="Center" Padding="0"/>
                <ProgressBar Name="StatusProgressBar" Width="100" Height="4" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Collapsed" Foreground="White" Background="#FFFFFF40" BorderThickness="0"/>
            </Grid>
        </Border>

    </Grid>
</Window>
