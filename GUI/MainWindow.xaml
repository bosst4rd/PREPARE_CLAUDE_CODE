<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerShell GUI Tool"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary Source="ControlTemplates.xaml"/>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="200"/>
            <!-- Activity Log -->
            <RowDefinition Height="30"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderBrush}">
            <Grid Margin="20,0">
                <Label Content="PowerShell GUI Tool" Style="{StaticResource HeaderLabel}" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <TabControl Name="MainTabControl" Style="{StaticResource ModernTabControl}">

                <!-- Tab 1: Main Operations -->
                <TabItem Header="Hauptfunktionen" Style="{StaticResource ModernTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                        <StackPanel Margin="0">

                            <!-- Input Section -->
                            <Label Content="Eingabe" Style="{StaticResource HeaderLabel}" FontSize="16"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Content="Textfeld:" Style="{StaticResource ModernLabel}" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="InputTextBox" Style="{StaticResource ModernTextBox}" />
                                <Button Grid.Row="0" Grid.Column="2" Name="ProcessButton" Content="Verarbeiten" Style="{StaticResource ModernButton}" Margin="10,0,0,0"/>

                                <Label Grid.Row="2" Grid.Column="0" Content="Option:" Style="{StaticResource ModernLabel}" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Name="OptionComboBox" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Option 1" IsSelected="True"/>
                                    <ComboBoxItem Content="Option 2"/>
                                    <ComboBoxItem Content="Option 3"/>
                                </ComboBox>
                            </Grid>

                            <!-- Action Buttons -->
                            <Label Content="Aktionen" Style="{StaticResource HeaderLabel}" FontSize="16" Margin="0,10,0,0"/>
                            <WrapPanel Margin="0,0,0,20">
                                <Button Name="Action1Button" Content="Aktion 1" Style="{StaticResource ModernButton}" Margin="0,0,10,10" MinWidth="120"/>
                                <Button Name="Action2Button" Content="Aktion 2" Style="{StaticResource ModernButton}" Margin="0,0,10,10" MinWidth="120"/>
                                <Button Name="Action3Button" Content="Aktion 3" Style="{StaticResource SecondaryButton}" Margin="0,0,10,10" MinWidth="120"/>
                                <Button Name="ClearButton" Content="Zurücksetzen" Style="{StaticResource SecondaryButton}" Margin="0,0,10,10" MinWidth="120"/>
                            </WrapPanel>

                            <!-- Options -->
                            <Label Content="Optionen" Style="{StaticResource HeaderLabel}" FontSize="16" Margin="0,10,0,0"/>
                            <StackPanel Margin="0,0,0,20">
                                <CheckBox Name="Option1CheckBox" Content="Verbose Logging aktivieren" Style="{StaticResource ModernCheckBox}" Margin="0,0,0,8"/>
                                <CheckBox Name="Option2CheckBox" Content="Automatische Verarbeitung" Style="{StaticResource ModernCheckBox}" Margin="0,0,0,8"/>
                                <CheckBox Name="Option3CheckBox" Content="Backup erstellen" Style="{StaticResource ModernCheckBox}" IsChecked="True" Margin="0,0,0,8"/>
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 2: Configuration -->
                <TabItem Header="Konfiguration" Style="{StaticResource ModernTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                        <StackPanel>
                            <Label Content="Konfigurationseinstellungen" Style="{StaticResource HeaderLabel}" FontSize="16"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Content="Arbeitsverzeichnis:" Style="{StaticResource ModernLabel}" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="WorkDirTextBox" Style="{StaticResource ModernTextBox}"/>
                                <Button Grid.Row="0" Grid.Column="2" Name="BrowseButton" Content="Durchsuchen" Style="{StaticResource SecondaryButton}" Margin="10,0,0,0"/>

                                <Label Grid.Row="2" Grid.Column="0" Content="Log-Datei:" Style="{StaticResource ModernLabel}" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Name="LogFileTextBox" Style="{StaticResource ModernTextBox}"/>

                                <Label Grid.Row="4" Grid.Column="0" Content="Timeout (Sek):" Style="{StaticResource ModernLabel}" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Name="TimeoutTextBox" Style="{StaticResource ModernTextBox}" Text="30"/>
                            </Grid>

                            <WrapPanel Margin="0,10,0,0">
                                <Button Name="SaveConfigButton" Content="Speichern" Style="{StaticResource ModernButton}" Margin="0,0,10,0" MinWidth="120"/>
                                <Button Name="LoadConfigButton" Content="Laden" Style="{StaticResource SecondaryButton}" MinWidth="120"/>
                            </WrapPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 3: About -->
                <TabItem Header="Info" Style="{StaticResource ModernTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                        <StackPanel>
                            <Label Content="Über dieses Tool" Style="{StaticResource HeaderLabel}" FontSize="16"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,10,0,10" FontSize="14" FontFamily="Segoe UI">
                                PowerShell GUI Tool - Ein robustes, modulares Tool basierend auf der Zero-Struktur.
                                <LineBreak/><LineBreak/>
                                Version: 1.0.0<LineBreak/>
                                Erstellt mit: PowerShell und WPF<LineBreak/>
                                Architektur: Modulare Zero-Struktur<LineBreak/>
                            </TextBlock>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

            </TabControl>
        </Grid>

        <!-- Activity Log Section -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
            <Grid Margin="20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Label Content="Aktivitätsprotokoll" Style="{StaticResource ModernLabel}" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                    <Button Name="ClearLogButton" Content="Protokoll löschen" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Right" Padding="12,4" FontSize="12"/>
                </Grid>

                <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                    <RichTextBox Name="ActivityLog"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="{DynamicResource BackgroundBrush}"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Padding="10">
                        <FlowDocument>
                            <Paragraph>
                                <Run Foreground="Gray" Text="Bereit..."/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource AccentBrush}" BorderThickness="0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Name="StatusLabel" Content="Bereit" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ProgressBar Name="StatusProgressBar"
                                 Width="100"
                                 Height="4"
                                 VerticalAlignment="Center"
                                 Visibility="Collapsed"
                                 Style="{StaticResource ModernProgressBar}"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
